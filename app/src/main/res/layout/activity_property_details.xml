<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_secondary"
    tools:context=".activity.propertyDetailsBuyer.PropertyDetailsBuyer">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/background_image_2"
        app:layout_constraintBottom_toBottomOf="@+id/scrollView_detail"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:id="@+id/scrollView_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_property_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:transitionName="@string/backgroundimage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:text="3+ Room"
                android:textColor="@color/primary"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="at Imadol Swimmming pool"
                android:textColor="@color/primary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textview_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="Gwarko"
                android:textColor="@color/primary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textview_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:drawablePadding="5dp"
                android:text="View in Map"
                android:textAlignment="textEnd"
                android:textColor="@color/primary"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="20dp"
                android:background="@color/primary_light" />

            <TextView
                android:id="@+id/textView_rent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="35dp"
                android:layout_marginVertical="10dp"
                android:drawablePadding="10dp"
                android:text="Rs 25000"
                android:textColor="@color/primary"
                android:textSize="21sp"
                app:drawableStartCompat="@drawable/ic_baseline_attach_money_24"
                app:drawableTint="@color/primary"
                app:layout_constraintHorizontal_bias="0.022"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="35dp"
                android:layout_marginVertical="10dp"
                android:drawablePadding="10dp"
                android:text="possession 22/12/2020"
                android:textColor="@color/primary"
                android:textSize="21sp"
                app:drawableStartCompat="@drawable/ic_baseline_calendar_today_24"
                app:drawableTint="@color/primary"
                app:layout_constraintHorizontal_bias="0.022"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView_tenant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="35dp"
                android:layout_marginVertical="10dp"
                android:drawablePadding="10dp"
                android:text="Any Tenant"
                android:textColor="@color/primary"
                android:textSize="21sp"
                app:drawableStartCompat="@drawable/ic_baseline_people_alt_24"
                app:drawableTint="@color/primary"
                app:layout_constraintHorizontal_bias="0.022"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView_furnishing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="35dp"
                android:layout_marginVertical="10dp"
                android:drawablePadding="10dp"
                android:text="Unfurnished"
                android:textColor="@color/primary"
                android:textSize="21sp"
                app:drawableStartCompat="@drawable/ic_baseline_king_bed_24"
                app:drawableTint="@color/primary"
                app:layout_constraintHorizontal_bias="0.022"
                app:layout_constraintStart_toStartOf="parent" />


            <TextView
                android:id="@+id/textView_parking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="35dp"
                android:layout_marginVertical="10dp"
                android:drawablePadding="10dp"
                android:text="2 &amp; 4 Wheeler"
                android:textColor="@color/primary"
                android:textSize="21sp"
                app:drawableStartCompat="@drawable/ic_baseline_local_parking_24"
                app:drawableTint="@color/primary"
                app:layout_constraintHorizontal_bias="0.022"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView_watersupply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="35dp"
                android:layout_marginVertical="10dp"
                android:drawablePadding="10dp"
                android:text="Multiple Source"
                android:textColor="@color/primary"
                android:textSize="21sp"
                app:drawableStartCompat="@drawable/ic_baseline_local_drink_24"
                app:drawableTint="@color/primary"
                app:layout_constraintHorizontal_bias="0.022"
                app:layout_constraintStart_toStartOf="parent" />


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="35dp"
                android:background="@color/primary_light" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/vpPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <me.relex.circleindicator.CircleIndicator3
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginBottom="80dp"
                app:ci_drawable="@drawable/indicator" />

        </LinearLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_home_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_corner_primary"
        android:drawableStart="@drawable/ic_baseline_local_phone_24"
        android:paddingStart="20dp"
        android:paddingEnd="55dp"
        android:text="@string/call_owner"
        android:textAllCaps="false"
        android:textColor="@color/white_secondary"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>